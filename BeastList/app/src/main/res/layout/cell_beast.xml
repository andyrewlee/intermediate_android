<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <CheckBox
        android:id="@+id/cell_beasted_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/cell_beast_objective"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_toRightOf="@+id/cell_beasted_check_box"/>

    <TextView
        android:id="@+id/cell_beast_created_at"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_toRightOf="@+id/cell_beasted_check_box"
        android:layout_below="@+id/cell_beasted_check_box"/>
</RelativeLayout>
